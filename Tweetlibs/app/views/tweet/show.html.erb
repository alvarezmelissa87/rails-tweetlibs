<h3>Select the tweets you would like to use in your story</h3>
<%= form_for [@story,@tweets], url: {action: 'update'} do |f| %>
  <%= select @tweets, :selected_tweets1, @tweets.tweet_array1[0..2] %>
  <%= select @tweets, :selected_tweets1, @tweets.tweet_array1[3..5] %>
  <%= select @tweets, :selected_tweets1, @tweets.tweet_array1[6..8] %>
  <%= select @tweets, :selected_tweets2, @tweets.tweet_array2[0..2] %>
  <%= select @tweets, :selected_tweets2, @tweets.tweet_array2[3..5] %>
  <%= select @tweets, :selected_tweets2, @tweets.tweet_array2[6..8] %>
<%= f.submit %>
<% end %>